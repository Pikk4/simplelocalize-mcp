{
  "name": "@p1kka/simplelocalize",
  "version": "1.0.2",
  "description": "MCP server for SimpleLocalize integration",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "simplelocalize-mcp": "./build/index.js"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "node esbuild.config.mjs && chmod 755 build/index.js",
    "dev": "ts-node --esm src/index.ts",
    "start": "node build/index.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "prepublishOnly": "npm run typecheck && npm run build",
    "prepack": "npm run build"
  },
  "files": [
    "build",
    "README.md"
  ],
  "keywords": [
    "mcp",
    "simplelocalize",
    "localization",
    "translation",
    "model-context-protocol"
  ],
  "author": "Jose Giovanni Vargas Rueda",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p1kka/simplelocalize-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/p1kka/simplelocalize-mcp/issues"
  },
  "homepage": "https://github.com/p1kka/simplelocalize-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.17.2",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.2.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "esbuild": "^0.24.0"
  }
}
